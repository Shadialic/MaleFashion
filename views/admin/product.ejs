      <!-- Navbar End -->
      <!-- partial -->
      <div class="main-panel">



        <div class="container-fluid pt-4 px-4">
          <div class="text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">Products</h6>
            </div>
            <div class="d-flex flex-row-reverse">
              <button class="p-2 btn-primary rounded-pill"> <a href="/admin/addproduct" style="color: black;">add
                  product</a></button>
            </div>
            <div class="table-responsive">
              <div class="col-12">
                <div class="rounded h-100 p-4">
                  <div class="table-responsive">
                    <table class="table" id="mytable" style="background-color: aliceblue;">
                      <thead>
                        <tr>
                          <th scope="col">No</th>
                          <th scope="col">Name</th>
                          <th scope="col">Brand</th>
                          <th scope="col">Price</th>
                          <th scope="col">Description</th>
                          <th scope="col">Quantity</th>
                          <th scope="col">Category</th>
                          <th scope="col">Image</th>
                          <th scope="col">Edit/Delete</th>
                          <th scope="col">Active</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (Product.length> 0 ) { %>

                          <% Product.forEach(function(product, index) { %>
                            <tr>
                              <td>
                                <%= index + 1 %>
                              </td>
                              <td>
                                <%= product.productname %>
                              </td>
                              <td>
                                <%= product.brand %>
                              </td>
                              <td>
                                <%= product.price %>
                              </td>
                              <td>
                                <%= product.description %>
                              </td>
                              <td>
                                <%= product.quantity %>
                              </td>
                              <td>
                                <%= product.category.category %>
                              </td>
                              <td><img style="height: 54px;width: 46px;" src="/productimages/<%= product.image[1] %>"
                                  width="100px" alt="<%= product.image %>"></td>
                              <td>
                                <div class="btn-group">
                                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                    data-bs-toggle="dropdown" style="color: black;">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                  </button>
                                  <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/admin/editproduct?id=<%= product._id %>">Edit</a>
                                    <a class="dropdown-item"
                                      href="/admin/delete-products?id=<%= product._id %>">Delete</a>
                                  </div>
                                </div>
                              </td>
                              <% if (product.status==false) { %>
                                <td><a href="/admin/show-products?id=<%= product._id %>"><button class="btn btn-danger"
                                      onclick="return hideconfirm(this)">Hide</button></a></td>
                                <% } else { %>
                                  <td><a href="/admin/show-products?id=<%= product._id %>"><button
                                        class="btn btn-success" onclick="return showconfirm(this)">Show</button></a>
                                  </td>
                                  <% } %>
                                    </td>
                            </tr>
                            <% }) %>
                              <% } else { %>
                                <tr>
                                  <td>
                                    Product Not Found
                                  </td>
                                </tr>
                                <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>



