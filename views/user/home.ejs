                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Banner Section End -->


    <section class="latest-product-area pb-40 category-list">
        <div class="row" style="margin: 13px;">
            <% if (products.length> 0) { %>
                <% products.forEach(function(user, index) { %>

                    <div class="col-lg-3 col-md-4 col-sm-6 col-12" style="padding: 10px;">
                        <div class="single-product border-solid-1px black">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/productimages/<%= user.image[1] %>"
                                    style="position: relative; background-position: center center; padding-bottom: 100%;">

                                    <ul class="product__hover">

                                        <li> <a onclick="addwish('<%=user._id %>')" class="social-info">
                                                <img src="/assets/img/icon/heart.png" alt="">

                                            </a></li>
                                        <li><a href="/detailesproduct?id=<%=user._id %>"><img
                                                    src="/assets/img/icon/search.png" alt="">
                                                <span>DetailedProduct</span></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <a href="#" onclick="addcart('<%= user._id %>')" class="add-cart">+ Add To Cart</a>
                                    <h6>
                                        <%= user.brand %>
                                    </h6>
                                    <h6>
                                        <%= user.productname %>
                                    </h6>
                                    <div class="price">
                                        <h6><strong>₹<%= user.price %>.00</strong></h6>
                                    </div>
                                    <h5>
                                        <%= user.category.category %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                        <% } else { %>
                            <div class="col-12">
                                <p>User Not Found</p>
                            </div>
                            <% } %>
        </div>
    </section>



