    <!-- Hero Section End -->

    <!-- Banner Section Begin -->
    <section class="banner spad" style="background-color: white;">
        <div class="container">
            <div class="row">

                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <img src="/productimages/<%=banner[0].image%>" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>
                                <%=banner[0].heading %>
                            </h2>

                            <a href="/products">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="/productimages/<%=banner[1].image %>" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>
                                <%=banner[1].heading %>
                            </h2>
